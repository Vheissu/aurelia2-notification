  
{
    "compilerOptions": {
      "composite": false,
      "declaration": false,
      "declarationMap": false,
      "pretty": true,
      "rootDir": "src",
      "target": "esnext",
      "module": "esnext",
      "lib": ["esnext", "dom"],
      "moduleResolution": "node",
      "importHelpers": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": false,
      "sourceMap": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "preserveConstEnums": true,
      "stripInternal": true,
      "strict": false
    },
    "include": [
      "src"
    ]
  }